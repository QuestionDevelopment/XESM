<div id="form_container" class="form_container"><div class="form_title">Register</div><form method="post" enctype="application/x-www-form-urlencoded" action="/account/register/" onsubmit="return(formValidate());"><div id="first_name_container" class="form_item_container form_item_text_container"><label for="first_name" class="form_label">First Name:</label><input type="text" id="first_name" name="first_name" tabindex="1" class="form_item form_item_text"><div class="form_clear"></div></div><div id="last_name_container" class="form_item_container form_item_text_container"><label for="last_name" class="form_label">Last Name:</label><input type="text" id="last_name" name="last_name" tabindex="2" class="form_item form_item_text"><div class="form_clear"></div></div><div id="email_container" class="form_item_container form_item_text_container"><label for="email" class="form_label">Email:</label><input type="text" id="email" name="email" tabindex="3" class="form_item form_item_text"><div class="form_clear"></div></div><div id="password_container" class="form_item_container form_item_password_container"><label for="password" class="form_label">Password:</label><input type="password" id="password" name="password" tabindex="4" class="form_item form_item_password"><div class="form_clear"></div></div><div id="password_again_container" class="form_item_container form_item_password_container"><label for="password_again" class="form_label">Password Again:</label><input type="password" id="password_again" name="password_again" tabindex="5" class="form_item form_item_password"><div class="form_clear"></div></div><div id="form_honeypot_container" class="form_honeypot_container"><label for="form_honeypot" class="form_label">Leave blank to send form</label><input type="text" id="form_honeypot" name="form_honeypot" class="form_honeypot"><div class="form_clear"></div></div><div class='form_submit'><input class='form_submit_input' type='submit' name='register' value='Register'></div></form></div><script>var emailRegex = /(.+)@(.+){2,}\.(.+){2,}/;var phoneRegex = /(\W|^)[(]{0,1}\d{3}[)]{0,1}[\s-]{0,1}\d{3}[\s-]{0,1}\d{4}(\W|$)/;var zipRegex = /^\d{5}$|^\d{5}-\d{4}$/;var alphaRegex = /^[a-zA-Z]+$/;var numericRegex = /^[0-9]+$/;var alpha_numericRegex = /^[a-zA-Z0-9]+$/;var alpha_numericSpaceRegex = /^[a-zA-Z0-9 ]+$/;var dateRegex = /^\d{2}\/\d{2}\/\d{4}$/;var dateTimeRegex = /^[0,1]?\d\/(([0-2]?\d)|([3][01]))\/((199\d)|([2-9]\d{3}))\s[0-2]?[0-9]:[0-5][0-9] (AM|am|aM|Am|PM|pm|pM|Pm)?$/;var timeRegex = /^ *(1[0-2]|[1-9]):[0-5][0-9] *(a|p|A|P)(m|M) *$/;var urlRegex = /(http|ftp|https):\/\/[\w\-_]+(\.[\w\-_]+)+([\w\-\.,@?^=%&amp;:/~\+#]*[\w\-\@?^=%&amp;/~\+#])?/;function formApplyError(itemid){var tempElem=formElem(itemid);tempElem.className += ' formError';tempElem.focus();}function formRemoveError(itemid){var tempElem=formElem(itemid);if(tempElem.className){tempElem.className.replace( /(?:^|\s)formError(?!\S)/ , '' );}}function formElem(id){var elem;if(document.getElementById){elem=document.getElementById(id);}else if(document.all){elem=document.all[id];}else if(document.layers){elem=document.layers[id];}return elem;}function formValidate(){if(formElem('first_name').value.length == 0){alert('First Name is a required field and must have a value');formApplyError('first_name_container'); return false; } else { formRemoveError('first_name_container'); }if(formElem('last_name').value.length == 0){alert('Last Name is a required field and must have a value');formApplyError('last_name_container'); return false; } else { formRemoveError('last_name_container'); }if(emailRegex.test(formElem('email').value) == false){alert('Email must be a valid email address');formApplyError('email_container'); return false; } else { formRemoveError('email_container'); }if(formElem('password').value.length == 0){alert('Password is a required field and must have a value');formApplyError('password_container'); return false; } else { formRemoveError('password_container'); }if(formElem('password_again').value != formElem('password').value){var errorOutput = 'Password Again must match the value of form item : '+formElem('password').value;alert(errorOutput);formApplyError('password_again_container'); return false; } else { formRemoveError('password_again_container'); }if(formElem('form_honeypot').value != ''){alert('Leave blank to send form is required to have the empty value');formApplyError('form_honeypot_container'); return false; } else { formRemoveError('form_honeypot_container'); }return true;}</script>